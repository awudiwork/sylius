FROM php:8.2-fpm

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼ŒåŒ…æ‹¬WebPæ”¯æŒ
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libicu-dev \
    libwebp-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    zip \
    unzip \
    nginx \
    supervisor \
    && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*

# å®‰è£… PHP æ‰©å±•ï¼Œå¯ç”¨WebPæ”¯æŒ
RUN docker-php-ext-configure gd --with-webp --with-jpeg --with-freetype \
    && docker-php-ext-configure intl \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd intl zip opcache

# å®‰è£… Composer  é…ç½®åŽä¸ºäº‘é•œåƒæºï¼ˆåŠ é€Ÿå›½å†…ä¸‹è½½ï¼‰
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer
# RUN composer config -g repo.packagist composer https://repo.huaweicloud.com/repository/php/

# å®‰è£… dos2unix å·¥å…·(ç”¨äºŽè½¬æ¢ Windows æ¢è¡Œç¬¦)
RUN apt-get update && apt-get install -y dos2unix && rm -rf /var/lib/apt/lists/*

# å®‰è£… Node.js 20.x å’Œ Yarn
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && npm install -g yarn \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# é…ç½® Nginx
RUN echo 'server {\n\
    listen 80;\n\
    root /app/public;\n\
    location / {\n\
        try_files $uri /index.php$is_args$args;\n\
    }\n\
    location ~ ^/index\.php(/|$) {\n\
        fastcgi_pass 127.0.0.1:9000;\n\
        fastcgi_split_path_info ^(.+\.php)(/.*)$;\n\
        include fastcgi_params;\n\
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;\n\
        fastcgi_param DOCUMENT_ROOT $realpath_root;\n\
        fastcgi_read_timeout 300;\n\
        fastcgi_connect_timeout 300;\n\
        fastcgi_send_timeout 300;\n\
        internal;\n\
    }\n\
    location ~ \.php$ {\n\
        return 404;\n\
    }\n\
}' > /etc/nginx/sites-available/default

# é…ç½® Supervisor
RUN echo '[supervisord]\n\
nodaemon=true\n\
\n\
[program:php-fpm]\n\
command=/usr/local/sbin/php-fpm\n\
autostart=true\n\
autorestart=true\n\
\n\
[program:nginx]\n\
command=/usr/sbin/nginx -g "daemon off;"\n\
autostart=true\n\
autorestart=true' > /etc/supervisor/conf.d/supervisord.conf

# åˆ›å»ºå¯åŠ¨è„šæœ¬ï¼Œè‡ªåŠ¨ä¿®å¤æƒé™å’Œæ¢è¡Œç¬¦é—®é¢˜
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
echo "ðŸš€ Starting Sylius Docker Container..."\n\
\n\
# ä¿®å¤ bin/console æ¢è¡Œç¬¦å’Œæƒé™\n\
if [ -f /app/bin/console ]; then\n\
    echo "âœ… Fixing bin/console permissions and line endings..."\n\
    dos2unix /app/bin/console 2>/dev/null || sed -i "s/\r$//" /app/bin/console\n\
    chmod +x /app/bin/console\n\
fi\n\
\n\
# åˆ›å»ºå¿…è¦çš„ç›®å½•\n\
echo "ðŸ“ Creating required directories..."\n\
mkdir -p /app/var/cache /app/var/log /app/public/media /app/config\n\
\n\
# ä¿®å¤ç›®å½•æƒé™\n\
echo "ðŸ” Fixing directory permissions..."\n\
chown -R www-data:www-data /app/var /app/public/media /app/config 2>/dev/null || true\n\
chmod -R 775 /app/var /app/public/media 2>/dev/null || true\n\
\n\
echo "âœ… Container initialization completed"\n\
echo "ðŸŒ Starting Nginx and PHP-FPM..."\n\
\n\
# å¯åŠ¨ supervisord\n\
exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf\n\
' > /usr/local/bin/docker-entrypoint.sh && chmod +x /usr/local/bin/docker-entrypoint.sh

CMD ["/usr/local/bin/docker-entrypoint.sh"]